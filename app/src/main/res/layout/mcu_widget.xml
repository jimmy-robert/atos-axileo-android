<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <ImageView
        android:id="@+id/widgetRefreshButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:src="@drawable/ic_refresh" />

    <TextView
        android:id="@+id/widgetMovieTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/widgetRefreshButton"
        android:layout_alignBottom="@id/widgetRefreshButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_toStartOf="@id/widgetRefreshButton"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/widgetMovieBackdrop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/widgetRefreshButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="#ccc"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />


</RelativeLayout>